@page "/"
@using BlazorTypewriter

<PageTitle>Kevin Zhang</PageTitle>

<MudText Typo="Typo.h3">
    <Typewriter Builder="@Builder"></Typewriter >
</MudText>

<MudText Class="mb-8">Welcome to your new app, powered by MudBlazor!</MudText>
<MudAlert Severity="Severity.Normal">
    You can find documentation and examples on our website here:
    <MudLink Color="Color.Inherit"
        Href="https://mudblazor.com"
        Typo="Typo.body2">
        <b>www.mudblazor.com</b>
    </MudLink>
</MudAlert>

@code{
    TypewriterBuilder Builder = new TypewriterBuilder(defaultCharacterPause: 50)
        .TypeString("Hello, There!")
        .Pause(2500)
        .DeleteAll()
        .TypeString("Here's Kevin Zhang!")
        .Pause(2500)
        .DeleteAll()
        .TypeString("Welcome to my website!")
        .Pause(2500);

}