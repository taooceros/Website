@page "/"
@using BlazorTypewriter

<PageTitle>Kevin Zhang</PageTitle>

<MudText Typo="Typo.h3">
    <Typewriter Builder="@Builder"/>
</MudText>


<MudAppBar Bottom="true"
    Color="Color.Transparent"
    Elevation="0">
    <MudStack AlignItems="AlignItems.Center"
        Class="flex-grow-1"
        Justify="Justify.Center"
        Row="true"
        Spacing="2">
        <MudIcon Icon="@Icons.Outlined.Label"
            Style="margin: 15px"/>
        Power by .Net 7 Blazor and MudBlazor
        <MudIconButton Color="Color.Inherit"
            Icon="@Icons.Custom.Brands.MudBlazor"
            Link="https://mudblazor.com/"
            Style="margin:0"
            Target="_blank"/>
    </MudStack>
</MudAppBar>


@code{
    TypewriterBuilder Builder = new TypewriterBuilder(defaultCharacterPause: 50)
        .TypeString("Hello, There!")
        .Pause(1000)
        .DeleteAll()
        .TypeString("Here's Kevin Zhang!")
        .Pause(2000)
        .DeleteAll()
        .TypeString("Welcome to my website!");

}